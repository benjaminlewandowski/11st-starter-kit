<header id="site_header" class="container fixed z-50 grid h-16 grid-cols-2 gap-2 px-4 py-3 sm:px-8 before:w-doublescreen before:-left-halfscreenw left-half before:z-40 before:dark:bg-neutral-900 lg:gap-4 xl:gap-6 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 3xl:grid-cols-6 before:empty-content before:border-neutral-100 dark:before:bg-neutral-900 dark:before:border-neutral-900 before:fixed before:h-16 before:top-0 before:block before:bg-white before:shadow-lg before:transition-colors" x-bind:class="{ 'before:bg-white before:shadow-lg ': !atTop }">
    <div class="flex items-center justify-between">
        {% block logo %}
            <a href="/feed" class="flex items-center flex-shrink-0">{% include "_icons/stage.njk" %}</a>
        {% endblock %}

        {% block sidebartoggle %}
            <button @click="showsidebar = !showsidebar" :class="{ 'active': showsidebar }" :aria-expanded="showsidebar ? 'true' : 'false'" class="z-20 flex items-center justify-center w-8 h-8 transition-colors duration-500 rounded-full text-neutral-900 bg-neutral-300 hover:bg-neutral-200 dark:text-neutral-300 dark:bg-neutral-700 dark:hover:bg-neutral-800" id='sidebar-toggle'>
                {{ '/src/_site/_includes/_icons/svg/hero/solid/x.svg' | svgContents("w-5 h-5 fill-current close") | safe }}
                {{ '/src/_site/_includes/_icons/svg/hero/solid/menu-alt-2.svg' | svgContents("w-5 h-5 fill-current open") | safe }}
            </button>
        {% endblock %}
    </div>

    {% block nav %}
        {% include "_partials/site-navigation.njk" %}
    {% endblock %}
</header>
