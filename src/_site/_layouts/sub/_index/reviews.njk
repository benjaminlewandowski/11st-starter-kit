<section class="grid grid-cols-1 gap-4 sm:grid-cols-2 auto-rows-auto xl:gap-6 md:grid-cols-3 lg:grid-cols-4 2xl:grid-cols-5 3xl:grid-cols-6">
    <header class="col-span-1 sr-only md:col-span-2 lg:col-span-3 xl:col-span-4 2xl:col-span-5 3xl:col-span-6">
        <h2>User Reviews</h2>
    </header>

    {% for user in users -%}
        <article class="flex flex-col col-span-1 transition-all duration-200 ease-linear rounded shadow group hover:shadow-md event bg-neutral-200">
            <header class="flex flex-col items-center justify-center p-4 pb-0 transition-colors duration-300 ease-in-out bg-white rounded-t group-hover:bg-neutral-50">
                <a href="{{ user.permalink }}"><img class="object-cover w-24 h-24 rounded-full shadow" src="{{ user.picture }}" alt="{{ user.username }}'s avatar"></a>
                <h3 class="p-4 text-xl font-bold text-center text-primary-800"><a href="{{ user.permalink }}">{{ user.username }}</a></h3>
            </header>
            <blockquote class="p-4 text-sm border-t rounded-b border-neutral-400 content-before">{{ user.review }}</blockquote>
        </article>
    {% endfor %}
</section>
