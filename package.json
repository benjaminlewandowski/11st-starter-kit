{
    "name": "11st-starter-kit",
    "description": "11ty, powered by Snowpack with Tailwind CSS and Alpine.js.",
    "version": "1.0.0",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git@github.com:benjaminlewandowski/11ty-stagee.git"
    },
    "keywords": [
        "alpinjs",
        "eleventy",
        "netlify",
        "snowpack",
        "tailwindcss"
    ],
    "author": {
        "name": "Benjamin Lewandowski",
        "email": "benjaminlewandowskidee@gmail.com"
    },
    "license": "MIT",
    "private": true,
    "bugs": {
        "url": "https://github.com/stefanfrede/11st-starter-kit/issues"
    },
    "homepage": "https://11st-starter-kit.netlify.app",
    "browserslist": [
        "defaults",
        "maintained node versions",
        "> 5%",
        "Firefox ESR",
        "not dead",
        "not ie > 0",
        "not op_mini > 0"
    ],
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "stylelint": {
        "extends": [
            "stylelint-config-recommended",
            "stylelint-order",
            "stylelint-config-rational-order"
        ],
        "plugins": [
            "stylelint-prettier",
            "stylelint-order",
            "stylelint-config-rational-order/plugin"
        ],
        "rules": {
            "at-rule-no-unknown": [
                true,
                {
                    "ignoreAtRules": [
                        "tailwind",
                        "apply",
                        "variants",
                        "responsive",
                        "screen"
                    ]
                }
            ],
            "declaration-block-trailing-semicolon": null,
            "no-descending-specificity": null,
            "rule-empty-line-before": [
                "always",
                {
                    "except": "first-nested"
                }
            ],
            "block-no-empty": null,
            "no-empty-source": null,
            "prettier/prettier": true,
            "order/properties-order": [],
            "plugin/rational-order": [
                true,
                {
                    "border-in-box-model": false,
                    "empty-line-between-groups": true,
                    "severity": "warning"
                }
            ]
        }
    },
    "lint-staged": {
        "*.{css,js,njk}": "stylelint --fix",
        "*.{js,njk}": "eslint --fix"
    },
    "scripts": {
        "clean": "run-s clean:*",
        "clean:build": "rimraf _build",
        "clean:dist": "rimraf dist",
        "serve": "serve --no-clipboard --listen 8080 dist",
        "dev": "NODE_ENV=development run-s clean dev:*",
        "dev:snowpack": "snowpack dev",
        "build": "NODE_ENV=production run-s clean build:*",
        "build:snowpack": "snowpack build",
        "lint": "run-s lint:*",
        "lint:eslint": "eslint --ext .js src/",
        "lint:stylelint": "stylelint src/**/*.js src/**/*.css",
        "format": "run-s format:*",
        "format:eslint": "eslint --ext .js src/ --fix",
        "format:stylelint": "stylelint src/**/*.js src/**/*.css --fix",
        "validate": "run-s build lint",
        "setup": "npm install && npm run validate"
    },
    "devDependencies": {
        "@11ty/eleventy": "^0.11.1",
        "@11ty/eleventy-navigation": "^0.1.6",
        "@11ty/eleventy-plugin-rss": "^1.1.0",
        "@babel/core": "^7.12.13",
        "@babel/preset-env": "^7.12.13",
        "@fullhuman/postcss-purgecss": "^4.0.0",
        "@snowpack/plugin-postcss": "^1.1.0",
        "@snowpack/plugin-run-script": "^2.3.0",
        "@tailwindcss/aspect-ratio": "^0.2.0",
        "@tailwindcss/forms": "^0.2.1",
        "@tailwindcss/line-clamp": "^0.2.0",
        "@tailwindcss/typography": "^0.4.0",
        "autoprefixer": "^10.2.4",
        "babel-eslint": "^10.1.0",
        "browserslist": "^4.16.3",
        "cssnano": "^4.1.10",
        "eleventy-plugin-lazyimages": "^2.1.0",
        "eleventy-plugin-seo": "^0.5.1",
        "eleventy-plugin-svg-contents": "^0.7.0",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-html": "^6.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "html-minifier": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "nunjucks": "^3.2.2",
        "postcss": "^8.2.6",
        "postcss-cli": "^8.3.1",
        "postcss-combine-media-query": "^1.0.1",
        "postcss-import": "^14.0.0",
        "postcss-nested": "^5.0.3",
        "postcss-preset-env": "^6.7.0",
        "postcss-short": "^5.0.0",
        "postcss-sort-media-queries": "^3.3.3",
        "postcss-sorting": "^6.0.0",
        "postcss-utilities": "^0.8.4",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "serve": "^11.3.2",
        "snowpack": "^3.0.11",
        "stylelint": "^13.10.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0",
        "stylelint-prettier": "^1.1.2",
        "tailwindcss": "^2.0.3",
        "tailwindcss-blend-mode": "^1.0.0",
        "tailwindcss-css-filters": "^2.0.0",
        "tailwindcss-debug-screens": "^2.0.0",
        "tailwindcss-pseudo-elements": "^1.5.1",
        "tailwindcss-scroll-snap": "^1.0.3",
        "tailwindcss-skip-link": "^1.0.1",
        "tailwindcss-textshadow": "^2.1.3"
    },
    "dependencies": {
        "alpinejs": "^2.8.0",
        "litepicker": "^2.0.4"
    }
}
